                @Html.DisplayFor(modelItem => item.Nivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Letra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
